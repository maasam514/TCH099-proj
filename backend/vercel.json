{
    "version": 2,
    "builds": [
        { "src": "backend/api/index.php", "use": "vercel-php@0.3.1" },
        { "src": "frontend/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/(css|js)/(.*)",
            "dest": "frontend/$1/$2"
        },
        { "src": "/api/(.*)", "dest": "backend/api/index.php" },
        {
            "src": "/(.*)",
            "dest": "backend/api/index.php"
        }
    ],
     "functions": {
    "api/index.php": { "runtime": "vercel-php@0.3.1" }
      },
    "env": {
        "APP_NAME": "LigueSoccer",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://tch-099-proj.vercel.app",
        "VERCEL_DEMO_MODE": "true",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "array",
        "VIEW_COMPILED_PATH": "/tmp/views",
        "SSR_TEMP_PATH": "/tmp/ssr",
        "NODE_PATH": "node"
    }
}
